<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vikas.letter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainPanel"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Splashscreen"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BANK"
            android:label="@string/title_activity_bank"
            android:parentActivityName=".MainPanel"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.vikas.letter.MainPanel" />
        </activity>
        <activity
            android:name=".Corporate"
            android:label="@string/title_activity_corporate"
            android:parentActivityName=".MainPanel"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.vikas.letter.MainPanel" />
        </activity>
        <activity
            android:name=".Education"
            android:label="@string/title_activity_education"
            android:parentActivityName=".MainPanel"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.vikas.letter.MainPanel" />
        </activity>
        <activity
            android:name=".UserInformation"
            android:label="@string/title_activity_user_information"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>